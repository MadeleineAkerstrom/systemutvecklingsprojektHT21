<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supX"
		xmlns:data="clr-namespace:supX.Data"
        xmlns:viewmodels="clr-namespace:supX.ViewModels"
        xmlns:Views="clr-namespace:supX.Views" x:Class="supX.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="860">
    <Grid Background="Black">
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="427" />
            <RowDefinition Height="15" />
            <RowDefinition Height="68"/>
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding CurrentViewModel}" 
                        Grid.Column = "1"
                        Grid.Row="1"/>
        <ContentControl Content="{Binding Saldo}" />

        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Margin="0,-3,0,-20">
            
            <Button Content="Choose Arena" Margin="0,0,0,0" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static data:GotoView.ArenaView}" Height="90" Width="130" Foreground="#FFD3CFCF" FontWeight="Bold" FontSize="16">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Images/RedButton.png"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>                        
            <Button Content="Rules" Margin="50,0,0,0" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static data:GotoView.RulesView}" Width="130" Height="95" Foreground="#FFD3CFCF" FontSize="16" FontWeight="Bold">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/Images/RedButton.png"/>
                </Button.Background>
            </Button>
            <Views:PlayerView HorizontalContentAlignment="Left" Height="90" Width="130" />



        </StackPanel>
    </Grid>
</Window>