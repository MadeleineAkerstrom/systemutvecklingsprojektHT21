<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supX"
		xmlns:data="clr-namespace:supX.Data"
        xmlns:viewmodels="clr-namespace:supX.ViewModels"
        xmlns:Views="clr-namespace:supX.Views" x:Class="supX.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="860">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="450" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <ContentControl 
                        Grid.Column = "1"
                        Grid.Row="1">
            <!--<ListBox x:Name="listFighter" Margin="585,127,52,52"/>-->
        </ContentControl>
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
            <Button Content="Choose Arena" Margin="0,0,0,0" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static data:GotoView.ArenaView}" Width="100"/>
            <Button Content="temporary winning view"
                     Command="{Binding ChangeViewCommand}" 
                    CommandParameter="{x:Static data:GotoView.LoserView}"
                    Margin="50,0,0,0" Width="100"  />
            <Button Content="History" Width="100" Margin="50,0,0,0" />
            <Button Content="Rules" Margin="50,0,0,0" Command="{Binding ChangeViewCommand}" CommandParameter="{x:Static data:GotoView.RulesView}" Width="100"/>

            <Label Content="{Binding MyPlayer.MyBalance}" />

            

        </StackPanel>
    </Grid>
</Window>