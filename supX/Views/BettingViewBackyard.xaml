<UserControl x:Class="supX.Views.BettingViewBackyard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:supX.Views"
             xmlns:data="clr-namespace:supX.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Button Content="" HorizontalAlignment="Left" Margin="400,190,0,0" VerticalAlignment="Top" Height="212" Width="154">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter2.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnFighter3" Content="" HorizontalAlignment="Left" Margin="233,190,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.69,0.684" Height="212" Width="154">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter1.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button Content="Bet!" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="71" FontSize="24" d:LayoutOverrides="VerticalAlignment" Width="116" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Images/PurpleButton.png"/>
            </Button.Background>
        </Button>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="279,-48,279,250" d:LayoutOverrides="HorizontalAlignment"/>
        <TextBox HorizontalAlignment="Center" Text="$" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Top" RenderTransformOrigin="0.461,2.931" Height="22" TextAlignment="Left" Margin="0,36,0,0" FontSize="14" FontWeight="Bold" Opacity="1" TextChanged="TextBox_TextChanged" Width="46"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="399,379,292,-36" d:LayoutOverrides="HorizontalAlignment"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="274,379,416,-36"/>
        <Label Content="{Binding Odds[0]}" HorizontalAlignment="Left" Margin="305,402,0,0" VerticalAlignment="Top" Foreground="#FFECECEC" d:LayoutOverrides="HorizontalAlignment"/>
        <Label Content="{Binding Odds[1]}" HorizontalAlignment="Left" Margin="429,402,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>
    </Grid>
</UserControl>
