<UserControl x:Class="supX.Views.BettingViewBellagio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:supX.Views"
             xmlns:data="clr-namespace:supX.Data"
             xmlns:viewmodels="clr-namespace:supX.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,-5,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/Frames/StageBettingView.png"/>
        </Grid.Background>
        <Button CommandParameter="" HorizontalAlignment="Left" Margin="507,243,0,0" VerticalAlignment="Top" Height="186" Width="116">
            <Button.Background>
                <ImageBrush ImageSource="{Binding GameVM.Fighter2.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button  HorizontalAlignment="Left" Margin="180,238,0,0" VerticalAlignment="Top" Height="186" Width="116">
            <Button.Background>
                <ImageBrush ImageSource="{Binding GameVM.Fighter1.ImagePath}"/>
            </Button.Background>
        </Button>
        <!--<ImageBrush ImageSource="{Binding GameVM.Fighter1.ImagePath}" Height="186" Width="116"/>-->

        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="279,-53,279,255"/>
        <Button Content="Bet!" Command="{Binding Parent.ChangeViewCommand}" CommandParameter="{x:Static data:GotoView.BellagioView}" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="71" FontSize="24" d:LayoutOverrides="VerticalAlignment" Width="116" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Images/Buttons/PurpleButton.png"/>
            </Button.Background>
        </Button>
        
        <TextBox HorizontalAlignment="Left" Text="{Binding BetAmount1, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Center" RenderTransformOrigin="0.461,2.931" Height="22" TextAlignment="Left" Margin="279,0,0,0" FontSize="14" FontWeight="Bold" Opacity="1" Width="46"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding BetAmount2, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Center" RenderTransformOrigin="0.461,2.931" Height="22" TextAlignment="Left" Margin="475,0,0,0" FontSize="14" FontWeight="Bold" Opacity="1" Width="46"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="506,159,185,184"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="178,159,512,184"/>
        <Label Content="{Binding GameVM.Odds[0]}" HorizontalAlignment="Left" Margin="208,182,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>
        <Label Content="{Binding GameVM.Odds[1]}" HorizontalAlignment="Left" Margin="536,182,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>

    </Grid>
</UserControl>
