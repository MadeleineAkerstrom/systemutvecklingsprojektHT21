<UserControl x:Class="supX.Views.BettingViewBellagio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:supX.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,-5,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/StageBettingView.png"/>
        </Grid.Background>
        <Button Content="" HorizontalAlignment="Left" Margin="520,262,0,0" VerticalAlignment="Top" Height="151" Width="82">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter2.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="190,266,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.69,0.684" Height="147" Width="86">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter1.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button Content="Bet!" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="71" FontSize="24" d:LayoutOverrides="VerticalAlignment" Width="116" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Images/PurpleButton.png"/>
            </Button.Background>
        </Button>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="279,-48,279,250" d:LayoutOverrides="HorizontalAlignment"/>
        <TextBox HorizontalAlignment="Center" Text="$" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Top" RenderTransformOrigin="0.461,2.931" Height="22" TextAlignment="Left" Margin="0,36,0,0" FontSize="14" FontWeight="Bold" Opacity="1" TextChanged="TextBox_TextChanged"  Width="46"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="506,159,185,184"/>
        <Image Source="/Assets/Images/Frames/PurpleOddsFrame.png" Margin="178,159,512,184"/>
        <Label Content="{Binding Odds[0]}" HorizontalAlignment="Left" Margin="208,182,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>
        <Label Content="{Binding Odds[1]}" HorizontalAlignment="Left" Margin="536,182,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>

    </Grid>
</UserControl>
