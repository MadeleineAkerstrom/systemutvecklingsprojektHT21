<UserControl x:Class="supX.Views.BettingViewWembley"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:supX.Views"
             xmlns:data="clr-namespace:supX.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/Backgrounds/WembleyOutside.jpg"/>
        </Grid.Background>
        <Button Content="" HorizontalAlignment="Left" Margin="560,284,0,0" VerticalAlignment="Top" Height="144" Width="89">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter2.ImagePath}"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="216,284,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.69,0.684" Height="144" Width="94">
            <Button.Background>
                <ImageBrush ImageSource="{Binding Fighter1.ImagePath}"/>
            </Button.Background>
        </Button>
        <Image Source="/Assets/Images/Frames/IceFrame.png" Margin="319,-3,263,316" RenderTransformOrigin="1.178,0.992"/>
        <TextBox HorizontalAlignment="Left" Text="$" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Top" RenderTransformOrigin="0.461,2.931" Height="32" TextAlignment="Left" Margin="388,34,0,0" FontSize="20" FontWeight="Bold" Opacity="1" TextChanged="TextBox_TextChanged" Width="80"/>
        <Image Source="/Assets/Images/Frames/IceFrame.png" Margin="550,164,140,179"/>

        <Image Source="/Assets/Images/Frames/IceFrame.png" Margin="208,164,482,179"/>
        <Label Content="{Binding Odds[0]}" FontSize="18" HorizontalAlignment="Left" Margin="238,190,0,0" VerticalAlignment="Top" Foreground="#FF8F8FFF" FontWeight="Bold"/>
        <Label Content="{Binding Odds[1]}" FontSize="18" HorizontalAlignment="Left" Margin="579,190,0,0" VerticalAlignment="Top" Foreground="#FF8F8FFF" FontWeight="Bold"/>

    </Grid>
</UserControl>
