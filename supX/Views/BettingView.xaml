        <Label Content="Odds 4" HorizontalAlignment="Left" Margin="429,402,0,0" VerticalAlignment="Top" Foreground="#FFECECEC"/>
        <Label Content="Odds 5" HorizontalAlignment="Left" Margin="567,402,0,0" VerticalAlignment="Top" Foreground="#FFEDEDF8"/>
        <Label Content="Odds 6" HorizontalAlignment="Left" Margin="695,402,0,0" VerticalAlignment="Top" Foreground="#FFD4C9C9"/>

    </Grid>
</UserControl>
