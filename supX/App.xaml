<Application x:Class="supX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:supX"
             xmlns:viewmodels="clr-namespace:supX.ViewModels"
             xmlns:views="clr-namespace:supX.Views"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate
             DataType="{x:Type viewmodels:ArenaViewModel}">
            <views:ArenaView />
        </DataTemplate>

        <DataTemplate
             DataType="{x:Type viewmodels:PlayerViewModel}">
            <views:PlayerView />
        </DataTemplate>

        <DataTemplate
            DataType="{x:Type viewmodels:GameViewModel}">
            <views:GameView />

        </DataTemplate>
    </Application.Resources>
</Application>
